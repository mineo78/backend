@model IEnumerable<GamingPlatform.Models.GameLobby>
@{
    ViewData["Title"] = $"Lobby - {ViewBag.GameType}";
    var gameType = ViewBag.GameType as string;
}

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <style>
        /* === STYLE MODERNE === */
        
        /* Background Particles */
        .bg-particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            overflow: hidden;
            z-index: -1;
        }

        .particle {
            position: absolute;
            width: 4px;
            height: 4px;
            background: rgba(255, 107, 107, 0.3);
            border-radius: 50%;
            animation: float 15s infinite ease-in-out;
        }

        .particle:nth-child(2) { left: 20%; animation-delay: -2s; background: rgba(78, 205, 196, 0.3); }
        .particle:nth-child(3) { left: 40%; animation-delay: -4s; }
        .particle:nth-child(4) { left: 60%; animation-delay: -6s; background: rgba(78, 205, 196, 0.3); }
        .particle:nth-child(5) { left: 80%; animation-delay: -8s; }

        @@keyframes float {
            0%, 100% { transform: translateY(100vh) scale(0); opacity: 0; }
            10% { opacity: 1; }
            90% { opacity: 1; }
            100% { transform: translateY(-10vh) scale(1); opacity: 0; }
        }

        /* Container principal */
        .game-container {
            max-width: 1100px;
            margin: 0 auto;
            padding: 40px 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* Header */
        .header {
            text-align: center;
            margin-bottom: 40px;
            animation: fadeInDown 0.8s ease-out;
        }

        @@keyframes fadeInDown {
            from { opacity: 0; transform: translateY(-30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        h1 {
            font-size: 2.8rem;
            font-weight: 700;
            background: linear-gradient(135deg, #ff6b6b, #4ecdc4);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 0.5rem;
            letter-spacing: -1px;
        }

        .subtitle {
            color: #a0aec0;
            font-size: 1.1rem;
            font-weight: 300;
        }

        /* Cards Glassmorphism */
        .glass-card {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 16px;
            padding: 30px;
            backdrop-filter: blur(10px);
            margin-bottom: 24px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            color: #e0e0e0;
            height: 100%;
            transition: transform 0.3s ease;
        }

        .glass-card:hover {
            transform: translateY(-5px);
            border-color: rgba(78, 205, 196, 0.3);
        }

        .glass-card h3 {
            font-size: 1.5rem;
            font-weight: 600;
            color: #fff;
            margin-bottom: 20px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            padding-bottom: 10px;
        }

        /* Formulaire */
        .form-label {
            color: #a0aec0;
            font-size: 0.9rem;
            margin-bottom: 8px;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            color: #fff;
            padding: 12px 15px;
        }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.1);
            border-color: #4ecdc4;
            box-shadow: 0 0 0 4px rgba(78, 205, 196, 0.1);
            color: #fff;
        }

        /* Boutons */
        .btn-modern {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
            cursor: pointer;
            margin-top: 10px;
        }

        .btn-primary-modern {
            background: linear-gradient(135deg, #ff6b6b, #ee5a5a);
            color: white;
        }

        .btn-primary-modern:hover {
            box-shadow: 0 5px 15px rgba(255, 107, 107, 0.4);
            transform: translateY(-2px);
        }

        .btn-success-modern {
            background: linear-gradient(135deg, #4ecdc4, #3dbdb5);
            color: white;
            padding: 8px 20px;
            width: auto;
            font-size: 0.9rem;
        }

        .btn-success-modern:hover {
            box-shadow: 0 5px 15px rgba(78, 205, 196, 0.4);
            transform: translateY(-2px);
        }

        /* Liste des parties */
        .lobby-item {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.05);
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 10px;
            transition: all 0.2s ease;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .lobby-item:hover {
            background: rgba(255, 255, 255, 0.08);
            border-color: rgba(78, 205, 196, 0.2);
        }

        .lobby-info h5 {
            margin: 0 0 5px 0;
            font-size: 1.1rem;
            color: #fff;
        }

        .lobby-info small {
            color: #a0aec0;
            font-size: 0.85rem;
        }

        .lobby-join-form {
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .lobby-join-form input {
            width: 140px;
            padding: 8px 12px;
            font-size: 0.9rem;
        }
    </style>
}

<!-- Background Particles -->
<div class="bg-particles">
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
</div>

<div class="game-container">
    <div class="header">
        <h1>Lobby @gameType</h1>
        <p class="subtitle">@Localizer["Lobby.Subtitle"]</p>
    </div>

    <div class="row w-100">
        <!-- Section Création -->
        <div class="col-md-6 mb-4">
            <div class="glass-card">
                <h3><i class="fa-solid fa-plus-circle"></i> @Localizer["Lobby.CreateGame"]</h3>
                
                <form asp-action="Create" method="post">
                    <input type="hidden" name="gameType" value="@gameType" />
                    
                    <div class="mb-3">
                        <label class="form-label">@Localizer["Lobby.GameNameLabel"]</label>
                        <input type="text" name="name" class="form-control" placeholder="Ex: Duel épique" required />
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">@Localizer["Lobby.YourNicknameLabel"]</label>
                        <input type="text" name="playerName" class="form-control" placeholder="Ex: Player1" required />
                    </div>
                    
                    <button type="submit" class="btn-modern btn-primary-modern">
                        @Localizer["Lobby.CreateGame"] <i class="fa-solid fa-arrow-right"></i>
                    </button>
                </form>
            </div>
        </div>

        <!-- Section Liste -->
        <div class="col-md-6 mb-4">
            <div class="glass-card">
                <h3><i class="fa-solid fa-list"></i> @Localizer["Lobby.AvailableGames"]</h3>
                
                @if (!Model.Any())
                {
                    <div class="text-center py-4 text-muted">
                        <i class="fa-regular fa-folder-open fa-2x mb-3 opacity-50"></i>
                        <p>@Localizer["Lobby.NoGames"]</p>
                    </div>
                }
                else
                {
                    <div class="lobby-list">
                        @foreach (var lobby in Model)
                        {
                            <div class="lobby-item">
                                <div class="lobby-info">
                                    <h5>@lobby.Name</h5>
                                    <small>
                                        <i class="fa-solid fa-user-tie"></i> @Localizer["Lobby.Host"]: @lobby.HostName 
                                        <span class="mx-2">|</span> 
                                        <i class="fa-solid fa-users"></i> @Localizer["Lobby.Players"]: @lobby.Players.Count/@lobby.MaxPlayers
                                    </small>
                                </div>
                                
                                <form asp-action="Join" method="post" class="lobby-join-form">
                                    <input type="hidden" name="lobbyId" value="@lobby.Id" />
                                    <input type="text" name="playerName" class="form-control" placeholder="@Localizer["Lobby.NicknamePlaceholder"]" required />
                                    <button type="submit" class="btn-modern btn-success-modern">
                                        @Localizer["Common.Join"]
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
