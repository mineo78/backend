@model IEnumerable<GamingPlatform.Models.GameLobby>
@{
    var gameType = ViewBag.GameType as string;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lobby - @gameType</title>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Outfit', sans-serif;
            background: linear-gradient(135deg, #0f0f1a 0%, #1a1a2e 50%, #16213e 100%);
            min-height: 100vh;
            color: #e0e0e0;
        }
        .card {
            background: rgba(26, 26, 46, 0.8);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: #e0e0e0;
        }
        .btn-primary {
            background: linear-gradient(135deg, #ff6b6b, #ff8787);
            border: none;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <h1 class="text-center mb-5">Lobby @gameType</h1>

        <div class="row">
            <div class="col-md-6">
                <div class="card p-4 mb-4">
                    <h3>Créer une partie</h3>
                    <form asp-action="Create" method="post">
                        <input type="hidden" name="gameType" value="@gameType" />
                        <div class="mb-3">
                            <label class="form-label">Nom de la partie</label>
                            <input type="text" name="name" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Votre pseudo</label>
                            <input type="text" name="playerName" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Créer</button>
                    </form>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card p-4">
                    <h3>Parties disponibles</h3>
                    @if (!Model.Any())
                    {
                        <p class="text-muted">Aucune partie disponible.</p>
                    }
                    else
                    {
                        <div class="list-group">
                            @foreach (var lobby in Model)
                            {
                                <div class="list-group-item bg-transparent text-light border-secondary mb-2">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5 class="mb-1">@lobby.Name</h5>
                                            <small>Hôte: @lobby.HostName | Joueurs: @lobby.Players.Count/@lobby.MaxPlayers</small>
                                        </div>
                                        <form asp-action="Join" method="post" class="d-flex gap-2">
                                            <input type="hidden" name="lobbyId" value="@lobby.Id" />
                                            <input type="text" name="playerName" class="form-control form-control-sm" placeholder="Pseudo" required style="width: 120px;" />
                                            <button type="submit" class="btn btn-success btn-sm">Rejoindre</button>
                                        </form>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
