<!DOCTYPE html>
@using System.Globalization
<html lang="@CultureInfo.CurrentUICulture.Name">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GamingPlatform</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GamingPlatform.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --bg-start: #0f0f1a;
            --bg-mid: #1a1a2e;
            --bg-end: #16213e;
            --accent-red: #ff6b6b;
            --accent-cyan: #4ecdc4;
            --text-main: #e0e0e0;
            --text-muted: #6b7280;
            --glass-bg: rgba(255, 255, 255, 0.03);
            --glass-border: rgba(255, 255, 255, 0.08);
        }

        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Outfit', sans-serif;
            background: linear-gradient(135deg, var(--bg-start) 0%, var(--bg-mid) 50%, var(--bg-end) 100%);
            min-height: 100vh;
            color: var(--text-main);
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        .gp-navbar {
            background: rgba(15, 15, 26, 0.85); 
            backdrop-filter: blur(12px);         
            -webkit-backdrop-filter: blur(12px);
            border-bottom: 1px solid var(--glass-border);
            padding: 0.8rem 0;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .gp-container-nav {
            width: 100%;
            padding: 0 40px; 
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .gp-brand {
            font-weight: 700;
            font-size: 1.4rem;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 10px;
            background: linear-gradient(135deg, var(--accent-red), var(--accent-cyan));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: -0.5px;
        }

        .gp-logo-dots {
            display: flex;
            gap: 4px;
        }

        .gp-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
        }
        .gp-dot.red { background: var(--accent-red); box-shadow: 0 0 8px rgba(255, 107, 107, 0.5); }
        .gp-dot.cyan { background: var(--accent-cyan); box-shadow: 0 0 8px rgba(78, 205, 196, 0.5); }

        /* LIENS */
        .gp-nav-links {
            display: flex;
            align-items: center;
            gap: 32px;
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .gp-nav-item a {
            color: var(--text-muted);
            font-weight: 500;
            font-size: 0.95rem;
            text-decoration: none;
            transition: color 0.3s ease;
            position: relative;
        }

        .gp-nav-item a:hover {
            color: #fff;
        }

        .gp-nav-item a.active {
            color: #fff;
        }

        .gp-nav-item a::after {
            content: '';
            position: absolute;
            bottom: -4px;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 2px;
            background: var(--accent-cyan);
            transition: width 0.3s ease;
            box-shadow: 0 0 8px var(--accent-cyan);
        }

        .gp-nav-item a:hover::after {
            width: 100%;
        }

        .gp-toggler {
            display: none;
            background: none;
            border: none;
            color: #fff;
            font-size: 1.5rem;
            cursor: pointer;
        }

        .gp-lang {
            margin-left: 20px;
        }

        .gp-lang select {
            background: rgba(255, 255, 255, 0.05);
            color: #e0e0e0;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            padding: 4px 8px;
            font-family: 'Outfit', sans-serif;
            font-size: 0.85rem;
            outline: none;
        }

        .gp-main-content {
            flex: 1;
            width: 100%;
            padding: 20px 40px; 
        }

        @@media (max-width: 768px) {
            .gp-container-nav {
                padding: 0 20px;
            }
            
            .gp-main-content {
                padding: 20px;
            }

            .gp-nav-links {
                display: none;
                flex-direction: column;
                position: absolute;
                top: 100%;
                left: 0;
                right: 0;
                background: rgba(15, 15, 26, 0.95);
                backdrop-filter: blur(15px);
                padding: 20px;
                border-bottom: 1px solid var(--glass-border);
                gap: 20px;
            }

            .gp-nav-links.show {
                display: flex;
            }

            .gp-toggler {
                display: block;
            }

            .gp-lang {
                margin-left: 0;
            }
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
@{
    var currentCulture = CultureInfo.CurrentUICulture.Name;
    var returnUrl = Context.Request.Path + Context.Request.QueryString;
}

    <header class="gp-navbar">
        <div class="gp-container-nav">
            <a class="gp-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <div class="gp-logo-dots">
                    <span class="gp-dot red"></span>
                    <span class="gp-dot cyan"></span>
                </div>
                GamingPlatform
            </a>

            <button class="gp-toggler" onclick="document.querySelector('.gp-nav-links').classList.toggle('show')">
                ☰
            </button>

            <ul class="gp-nav-links">
                <li class="gp-nav-item">
                    <a asp-controller="Puissance4" asp-action="Game">@Localizer["Nav.Puissance4"]</a>
                </li>
                <li class="gp-nav-item">
                    <a asp-controller="SpeedTyping" asp-action="Index">@Localizer["Nav.SpeedTyping"]</a>
                </li>
                <li class="gp-nav-item">
                    <a asp-controller="Morpion" asp-action="Index">@Localizer["Nav.Morpion"]</a>
                </li>
                <li>
                    <form class="gp-lang" asp-controller="Localization" asp-action="SetLanguage" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="returnUrl" value="@returnUrl" />
                        <label class="visually-hidden" for="culture-select">@Localizer["Nav.Language"]</label>
                        <select id="culture-select" name="culture" onchange="this.form.submit()">
                            <option value="fr-FR" selected="@(currentCulture == "fr-FR" ? "selected" : null)">Français</option>
                            <option value="en-US" selected="@(currentCulture == "en-US" ? "selected" : null)">English</option>
                            <option value="es-ES" selected="@(currentCulture == "es-ES" ? "selected" : null)">Español</option>
                        </select>
                    </form>
                </li>
            </ul>
        </div>
    </header>

    <main role="main" class="gp-main-content">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
