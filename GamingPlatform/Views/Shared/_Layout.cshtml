<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GamingPlatform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GamingPlatform.styles.css" asp-append-version="true" />
    <style>
        /* Styliser le conteneur du widget */
        #google_translate_element {
            display: inline-block;
            margin-right: 10px;
            font-family: Arial, sans-serif;
        }

            /* Styliser le menu déroulant */
            #google_translate_element select {
                background-color: #2c3e50; /* Couleur de fond */
                color: #ecf0f1; /* Couleur du texte */
                border: 1px solid #e74c3c; /* Bordure */
                border-radius: 5px; /* Coins arrondis */
                padding: 5px 10px; /* Espace interne */
                font-size: 14px; /* Taille de la police */
                cursor: pointer; /* Curseur en forme de main */
            }

                /* Modifier l'apparence au survol */
                #google_translate_element select:hover {
                    background-color: #34495e;
                    border-color: #c0392b;
                }

                /* Modifier l'apparence lorsqu'il est actif (focus) */
                #google_translate_element select:focus {
                    outline: none;
                    box-shadow: 0 0 5px #e74c3c;
                }

            /* Styliser le texte dans le bouton du widget */
            #google_translate_element span {
                color: #ecf0f1;
                font-weight: bold;
            }

            #google_translate_element i {
                color: #ecf0f1;
                margin-right: 8px;
                vertical-align: middle;
            }

    </style>

</head>

<body>
    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GamingPlatform</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Puissance4" asp-action="Index">Puissance4</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="SpeedTyping" asp-action="Index" >Speed Typing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Morpion" asp-action="Index">Morpion</a>
                        </li>
                    </ul>
                </div>
                <div id="google_translate_element">
                    <i class="fa fa-globe"></i>
                </div>

            </di
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - GamingPlatform - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
