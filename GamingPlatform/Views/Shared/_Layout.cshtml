<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GamingPlatform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GamingPlatform.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        /* === GLOBAL & NAVBAR CSS INTEGRATED === */
        :root {
            --primary-gradient: linear-gradient(135deg, #ff6b6b 0%, #4ecdc4 100%);
            --dark-bg: linear-gradient(135deg, #0f0f1a 0%, #1a1a2e 50%, #16213e 100%);
            --glass-bg: rgba(255, 255, 255, 0.03);
            --glass-border: 1px solid rgba(255, 255, 255, 0.08);
        }

        body {
            font-family: 'Outfit', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: var(--dark-bg);
            color: #e0e0e0;
            min-height: 100vh;
        }

        /* Main navbar */
        .navbar {
            background: rgba(15, 15, 26, 0.8) !important;
            backdrop-filter: blur(10px) !important;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1) !important;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3) !important;
            padding: 0.75rem 0 !important;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        /* Brand/Logo */
        .navbar-brand {
            font-family: 'Outfit', sans-serif !important;
            font-size: 1.4rem !important;
            font-weight: 700 !important;
            background: linear-gradient(135deg, #ff6b6b, #4ecdc4) !important;
            -webkit-background-clip: text !important;
            -webkit-text-fill-color: transparent !important;
            background-clip: text !important;
            letter-spacing: -0.5px !important;
            display: flex !important;
            align-items: center !important;
            gap: 10px !important;
        }

        .navbar-brand:hover {
            opacity: 0.9 !important;
        }

        .navbar-brand::before {
            content: '🎮' !important;
            font-size: 1.2rem;
            -webkit-text-fill-color: initial !important;
            filter: drop-shadow(0 0 5px rgba(255, 107, 107, 0.5));
        }

        /* Nav items */
        .navbar-nav {
            gap: 8px !important;
        }

        .nav-link {
            color: #a0aec0 !important;
            font-family: 'Outfit', sans-serif !important;
            font-weight: 500 !important;
            font-size: 0.95rem !important;
            transition: all 0.3s ease !important;
            padding: 0.5rem 1rem !important;
            position: relative !important;
        }

        .nav-link::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 2px;
            background: linear-gradient(90deg, #ff6b6b, #4ecdc4);
            transition: width 0.3s ease;
        }

        .nav-link:hover {
            color: #fff !important;
        }

        .nav-link:hover::after {
            width: 100%;
        }

        /* Active link highlight */
        .nav-link.text-dark { /* Override default bootstrap class */
            color: #a0aec0 !important;
        }

        /* Navbar toggler (mobile) */
        .navbar-toggler {
            border: 1px solid rgba(255, 255, 255, 0.2) !important;
            border-radius: 8px !important;
        }

        .navbar-toggler:focus {
            box-shadow: 0 0 0 3px rgba(78, 205, 196, 0.3) !important;
            border-color: #4ecdc4 !important;
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(224,224,224,0.8)' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e") !important;
        }

        /* Dropdown menu override */
        .dropdown-menu {
            background: rgba(15, 15, 26, 0.95) !important;
            backdrop-filter: blur(10px) !important;
            border: 1px solid rgba(255, 255, 255, 0.1) !important;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4) !important;
        }
        
        .dropdown-item {
            color: #a0aec0 !important;
        }
        
        .dropdown-item:hover {
            background: rgba(78, 205, 196, 0.1) !important;
            color: #4ecdc4 !important;
        }

        /* Footer */
        .footer {
            background: rgba(15, 15, 26, 0.8);
            border-top: 1px solid rgba(255, 255, 255, 0.05);
            color: #6b7280;
            padding: 20px 0;
            font-size: 0.9rem;
        }
        
        .footer a {
            color: #4ecdc4;
            text-decoration: none;
        }
        
        .footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GamingPlatform</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Puissance4" asp-action="Game">Puissance 4</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="SpeedTyping" asp-action="Index">Speed Typing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Morpion" asp-action="Index">Morpion</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2025 - GamingPlatform - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
