@{
	var tempId = Guid.NewGuid();
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lobby - Speed Typing</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #2c3e50;
            color: #ecf0f1;
        }

        .card {
            background-color: #34495e;
            color: #ecf0f1;
        }

        .btn-primary {
            background-color: #e74c3c;
            border-color: #e74c3c;
        }

            .btn-primary:hover {
                background-color: #c0392b;
                border-color: #c0392b;
            }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="text-center mb-5">
            <h1 class="text-warning">Bienvenue au Lobby de @Model.Host</h1>
            <p class="text-muted">Rejoignez le lobby et préparez-vous à une partie de Speed Typing excitante !</p>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info">
                @TempData["Message"]
            </div>
        }

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-danger">
                @ViewBag.Message
            </div>
        }

        <div class="card shadow p-4 mb-4">
            <h3><i class="fa-solid fa-users"></i> Liste des joueurs :</h3>
            <ul id="playerList" class="list-group list-group-flush mt-3">
                @foreach (var player in Model.Players)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="fa-solid fa-user"></i> @player</span>
                    </li>
                }
            </ul>
        </div>

        @if (!Model.IsStarted)
        {
            <div class="d-flex flex-column align-items-center">
                <div class="input-group mb-3" style="max-width: 400px;">
                    <span class="input-group-text bg-dark text-light"><i class="fa-solid fa-user-plus"></i></span>
                    <input type="text" name="player" class="form-control" placeholder="Nom du joueur">
                </div>
                <button id="joinLobbyButton" class="btn btn-primary mb-3">
                    <i class="fa-solid fa-door-open"></i> Rejoindre le lobby
                </button>
                <button id="startGameButton" class="btn btn-success">
                    <i class="fa-solid fa-play"></i> Démarrer Speed Typing
                </button>

              
            </div>
        }
        else
        {
            <div class="text-center">
                <a href="@Url.Action("Game", "SpeedTyping", new { id = ViewBag.LobbyId })" class="btn btn-success">
                    <i class="fa-solid fa-gamepad"></i> Accéder au jeu
                </a>
            </div>
        }

        <div class="text-center mt-4">
            <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#rulesModal">
                <i class="fa-solid fa-info-circle"></i> Voir les règles
            </button>
        </div>
    </div>

    <!-- Modal des règles -->
    <div class="modal fade" id="rulesModal" tabindex="-1" aria-labelledby="rulesModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-dark text-light">
                    <h5 class="modal-title" id="rulesModalLabel"><i class="fa-solid fa-book"></i> Règles du Speed Typing</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body bg-light text-dark">
                    <ul>
                        <li>Chaque joueur doit taper la phrase affichée le plus rapidement possible.</li>
                        <li>La précision est essentielle : chaque caractère compte.</li>
                        <li>Le joueur qui termine avec 100% de précision gagne la partie.</li>
                        <li>Si le temps imparti est écoulé, le joueur avec le meilleur score gagne.</li>
                        <li>Bonne chance et que le meilleur gagne !</li>
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fa-solid fa-times"></i> Fermer
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.4/signalr.min.js"></script>
    <script>
        const lobbyId = '@ViewBag.LobbyId';
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/speedTypingHub")
            .build();

        connection.start().then(() => {
            connection.invoke("JoinLobbyGroup", lobbyId);
        });

        connection.on("PlayerJoined", (playerName) => {
            const playerList = document.getElementById("playerList");
            if (!Array.from(playerList.children).some((item) => item.textContent === playerName)) {
                const listItem = document.createElement("li");
                listItem.classList.add("list-group-item", "d-flex", "justify-content-between", "align-items-center");
                listItem.innerHTML = `<i class="fa-solid fa-user"></i> ${playerName}`;
                playerList.appendChild(listItem);
            }
        });

        connection.on("GameStarted", (players) => {
            console.log("Le jeu a démarré !");
            console.log("Liste des joueurs :", players);
            const playerName = window.localStorage.getItem(lobbyId + "@tempId");
            window.location.href = `/SpeedTyping/Game?id=${lobbyId}&currentPlayer=${playerName}`;
        });

        document.getElementById("joinLobbyButton")?.addEventListener("click", () => {
            const playerName = document.querySelector('input[name=player]').value.trim();
            if (!playerName) {
                alert('Veuillez entrer un nom de joueur.');
                return;
            }
            window.localStorage.setItem(`${lobbyId}@tempId`, playerName);
            connection.invoke("JoinLobby", lobbyId, playerName)
                .catch(err => console.error("Erreur lors de l'invocation JoinLobby :", err));
        });

        document.getElementById("startGameButton")?.addEventListener("click", () => {
            connection.invoke("StartGame", lobbyId)
                .catch(err => console.error("Erreur lors de l'invocation StartGame :", err));
        });

    </script>
    <script>
        function googleTranslateElementInit() {
            new google.translate.TranslateElement(
                { pageLanguage: 'fr' },
                'google_translate_element'
            );
        }
    </script>
    <script src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
</body>
</html>


