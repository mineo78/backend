@model Dictionary<string, GamingPlatform.Models.SpeedTypingGame>
 

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des lobbys</title>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Outfit', sans-serif;
            background: linear-gradient(135deg, #0f0f1a 0%, #1a1a2e 50%, #16213e 100%);
            min-height: 100vh;
            color: #e0e0e0;
            overflow-x: hidden;
        }

        .bg-particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            overflow: hidden;
            z-index: 0;
        }

        .particle {
            position: absolute;
            width: 4px;
            height: 4px;
            background: rgba(255, 107, 107, 0.3);
            border-radius: 50%;
            animation: float 15s infinite ease-in-out;
        }

        .particle:nth-child(2) { left: 20%; animation-delay: -2s; background: rgba(78, 205, 196, 0.3); }
        .particle:nth-child(3) { left: 40%; animation-delay: -4s; }
        .particle:nth-child(4) { left: 60%; animation-delay: -6s; background: rgba(78, 205, 196, 0.3); }
        .particle:nth-child(5) { left: 80%; animation-delay: -8s; }

        @@keyframes float {
            0%, 100% { transform: translateY(100vh) scale(0); opacity: 0; }
            10% { opacity: 1; }
            90% { opacity: 1; }
            100% { transform: translateY(-10vh) scale(1); opacity: 0; }
        }

        .container {
            position: relative;
            z-index: 1;
            padding: 40px 20px;
        }

        h1, h2 {
            background: linear-gradient(135deg, #fff 0%, #a5b4fc 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 20px;
        }

        .card {
            background: rgba(26, 26, 46, 0.8);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            color: #e0e0e0;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 48px rgba(78, 205, 196, 0.2);
        }

        .btn-primary {
            background: linear-gradient(135deg, #ff6b6b, #ff8787);
            border: none;
            border-radius: 12px;
            padding: 12px 30px;
            font-weight: 600;
            color: white;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #ff5252, #ff6b6b);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 107, 107, 0.4);
        }

        .form-control {
            background: rgba(15, 15, 26, 0.6);
            border: 2px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            color: #e0e0e0;
            padding: 12px 16px;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            background: rgba(15, 15, 26, 0.8);
            border-color: #4ecdc4;
            box-shadow: 0 0 20px rgba(78, 205, 196, 0.3);
            color: #e0e0e0;
        }

        .form-control::placeholder {
            color: rgba(224, 224, 224, 0.5);
        }

        .list-group-item {
            background: rgba(15, 15, 26, 0.5);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: #e0e0e0;
            padding: 16px;
            margin-bottom: 8px;
            border-radius: 12px;
            transition: all 0.3s ease;
        }

        .list-group-item:hover {
            background: rgba(78, 205, 196, 0.1);
            border-color: #4ecdc4;
            transform: translateX(5px);
        }

        .list-group-item a {
            color: #4ecdc4;
            text-decoration: none;
            font-weight: 500;
        }

        .badge {
            background: linear-gradient(135deg, #4ecdc4, #44a3a0);
            border-radius: 8px;
            padding: 6px 12px;
            font-weight: 500;
        }

        .text-danger {
            color: #ff6b6b !important;
        }

        .lead {
            color: rgba(224, 224, 224, 0.8);
        }
    </style>
</head>
<body>
    <div class="bg-particles">
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
    </div>

    <div class="container py-5">
        <!-- Title -->
        <div class="text-center mb-5">
            <h1 class="display-4">Liste des Lobbys</h1>
            <p class="lead">Rejoignez un lobby existant ou créez-en un nouveau pour commencer à jouer.</p>
        </div>

        <!-- Lobby List -->
        <div class="card shadow mb-5">
            <div class="card-body">
                <h2 class="card-title"><i class="fa-solid fa-list"></i> Lobbys disponibles</h2>
                <ul id="lobbyList" class="list-group mt-3">
                    @foreach (var lobby in Model)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("Lobby","SpeedTyping", new { id = lobby.Key })" class="text-decoration-none text-primary">
                                <i class="fa-solid fa-door-open"></i> Lobby @lobby.Key
                            </a>
                            <span class="badge bg-success">Host: @lobby.Value.Host</span>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <!-- Create Lobby -->
        <div class="card shadow mb-5">
            <div class="card-body">
                <h2 class="card-title"><i class="fa-solid fa-plus-circle"></i> Créer un nouveau lobby</h2>
                <form method="post" action="@Url.Action("CreateLobby", "SpeedTyping")" class="mt-4">
                    <div class="mb-3">
                        <label for="hostName" class="form-label">Nom du lobby :</label>
                        <input type="text" id="hostName" name="host" class="form-control" placeholder="Entrez un nom" required>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa-solid fa-check"></i> Créer
                    </button>
                </form>
                @if (ViewData["ErrorMessage"] != null)
                {
                    <p class="text-danger mt-3"><i class="fa-solid fa-exclamation-circle"></i> @ViewData["ErrorMessage"]</p>
                }
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.4/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/speedTypingHub")
            .build();

        connection.start().then(() => {
            console.log("Connected to SignalR hub.");
        });

        connection.on("LobbyCreated", (host) => {
            const lobbyList = document.getElementById("lobbyList");
            const listItem = document.createElement("li");
            listItem.classList.add("list-group-item", "d-flex", "justify-content-between", "align-items-center");

            const link = document.createElement("a");
            link.href = `/SpeedTyping/Lobby/${host}`;
            link.textContent = `Lobby ${host}`;
            link.classList.add("text-decoration-none", "text-primary");

            const badge = document.createElement("span");
            badge.classList.add("badge", "bg-success");
            badge.textContent = `Host: ${host}`;

            listItem.appendChild(link);
            listItem.appendChild(badge);

            lobbyList.appendChild(listItem);
            console.log(`Nouveau lobby ajouté : ${host}`);
        });
    </script>

</body>
</html>
