@model GamingPlatform.Models.SpeedTypingGame

@{
    var currentPlayer = ViewBag.CurrentPlayer as string; 
    var lobbyId = ViewBag.LobbyId as string;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Speed Typing Game</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #2c3e50;
            color: #ecf0f1;
        }
        .card {
            background-color: #34495e;
            color: #ecf0f1;
        }
        .list-group-item {
            background-color: #2c3e50;
            color: #ecf0f1;
            border: 1px solid #34495e;
        }
        .btn-primary {
            background-color: #e74c3c;
            border-color: #e74c3c;
        }
        .btn-primary:hover {
            background-color: #c0392b;
            border-color: #c0392b;
        }
        .winner-message h2 {
            color: #f1c40f;
        }
        #timeRemaining {
            font-weight: bold;


        }

        .modal-title {
            color : black;
            font-weight: bold;
        }
    </style>
</head>
<body>
<div class="container py-5">
    @if (ViewBag.Winner != null)
    {
        <div class="card text-center p-4 shadow mb-4">
            <h2 class="winner-message">
                <i class="fa-solid fa-trophy text-warning"></i>
                Félicitations, @ViewBag.Winner ! Vous avez gagné !
            </h2>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-4">
                <h3><i class="fa-solid fa-users"></i> Progression des joueurs :</h3>
                @if (Model.Players != null && Model.Players.Any())
                {
                    <ul class="list-group list-group-flush mt-3">
                        @foreach (var player in Model.Players)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="fa-solid fa-user"></i> @player</span>
                                <span id="progress-@player" class="badge bg-primary">
                                    @if (Model.Progress != null && Model.Progress.ContainsKey(player))
                                    {
                                        @($"{Model.Progress[player]}%")
                                    }
                                    else
                                    {
                                        @("0%")
                                    }
                                </span>
                            </li>
                        }
                    </ul>
                }
            </div>

            <div class="col-md-6">
                <div class="card p-4 shadow">
                    <h3><i class="fa-solid fa-quote-left"></i> Phrase à taper :</h3>
                    <div class="notranslate">
                        <p class="bg-dark text-light p-3 rounded"><strong>@Model.TextToType</strong></p>
                    </div>

                    <div class="input-group mt-4">
                        <span class="input-group-text bg-dark text-light"><i class="fa-solid fa-keyboard"></i></span>
                        <input type="text" id="typingInput" class="form-control" placeholder="Commencez à taper..." oninput="updateProgressPlayers()">
                    </div>

                    <h3 class="mt-4"><i class="fa-solid fa-id-badge"></i> Nom du joueur actuel :</h3>
                    <p class="text-center fs-5"><strong>@currentPlayer</strong></p>

                    <h3 class="mt-4"><i class="fa-solid fa-user"></i> Votre progression :</h3>
                    <p id="playerProgress" class="text-center fs-4">
                        @if (Model.Progress != null && Model.Progress.ContainsKey(currentPlayer))
                        {
                            @($"{Model.Progress[currentPlayer]}%")
                        }
                        else
                        {
                            @("0 %")
                        }
                    </p>

                    <div id="gameStatus" class="mt-4">
                        @if (!Model.IsStarted)
                        {
                            <p class="text-warning">Le jeu n'a pas encore commencé. Attendez que l'hôte lance la partie.</p>
                        }
                        else
                        {
                            <p class="text-success">Le jeu a commencé ! Tapez pour gagner !</p>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-2 text-end">
                <h3><i class="fa-solid fa-clock"></i> Temps restant :</h3>
                <div>
                    <span class="notranslate fs-2 fw-bold text-danger" translate="no" id="timer">60</span> secondes
                </div>
            </div>
        </div>
    }

    <div class="text-center mt-4">
        <button id="GameOverButton" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#confirmModal">
            <i class="fa-solid fa-flag-checkered"></i> Fin de la Partie
        </button>

        <div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmModalLabel">Confirmation de fin de partie</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" style="color: black;">
                        Êtes-vous sûr de vouloir mettre fin à la partie ? Vous allez perdre et le joueur avec le plus gros score sera désigné comme gagnant.
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                        <button type="button" class="btn btn-primary" id="confirmEndGameButton">Oui, terminer la partie</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


     <script>
        document.getElementById('confirmEndGameButton').addEventListener('click', function () {
        var confirmModal = new bootstrap.Modal(document.getElementById('confirmModal'));
        confirmModal.hide();

        const progress = @Html.Raw(Json.Serialize(Model.Progress));
                    let maxProgress = 0;
                    let winner = null;

                    for (const player in progress) {
                        if (player !== '@currentPlayer' && progress[player] > maxProgress) {
                            maxProgress = progress[player];
                            winner = player;
                        }
                    }

                    localStorage.setItem("podium", JSON.stringify(progress));
                    localStorage.setItem("winner", winner);

                    connection.invoke("NotifyGameOver", '@lobbyId', winner)
                        .catch(err => console.error("Erreur lors de la notification de fin de partie :", err));

                    window.location.href = "/SpeedTyping/GameOver?id=" + '@lobbyId';
                });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.4/signalr.min.js"></script>
    <script>


        let timeRemaining = 60;


        function updateTimer() {
            if (timeRemaining > 0) {
                timeRemaining--; 
                document.getElementById('timer').innerText = timeRemaining; 
            }
            if (timeRemaining <= 10) {
                document.getElementById('timer').style.color = 'red';
            } 
            if (timeRemaining === 0) {
                clearInterval(timerInterval); 
                gameEnded = true
                connection.invoke("NotifyGameOver", '@lobbyId')
                    .catch(err => console.error("Erreur lors de la notification de fin de partie :", err));
            }
        }

        const timerInterval = setInterval(updateTimer, 1000);



    function updateProgressPlayers() {
    const playerInput = document.getElementById('typingInput').value;
    const progress = calculateProgress(playerInput);

    document.getElementById('playerProgress').textContent = `${progress}%`;

    connection.invoke("UpdatePlayerProgress", '@lobbyId', '@currentPlayer', parseFloat(progress))
        .then(() => {
            if (parseFloat(progress) === 100) {
                connection.invoke("NotifyGameOver", '@lobbyId')
                    .catch(err => console.error("Erreur lors de la fin de la partie :", err));
            }
        })
        .catch(err => console.error("Erreur lors de UpdatePlayerProgress :", err));

    }


        function decodeHtml(html) {
            const txt = document.createElement("textarea");
            txt.innerHTML = html;
            return txt.value;
        }

        function calculateProgress(input) {
            let targetText = decodeHtml('@Model.TextToType');
            targetText = targetText.normalize('NFD').replace(/[\u0300-\u036f]/g, "").trim().toLowerCase();
            input = input.normalize('NFD').replace(/[\u0300-\u036f]/g, "").trim().toLowerCase();

            let correctChars = 0;
            for (let i = 0; i < input.length; i++) {
                if (i < targetText.length && input[i] === targetText[i]) {
                    correctChars++;
                } else {
                    break;
                }
            }

            const progress = Math.min((correctChars / targetText.length) * 100, 100);
            return progress.toFixed(2);
        }





    </script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/speedTypingHub")
            .build();

        connection.on("PlayerProgressUpdated", (playerName, progress) => {
            const progressElement = document.getElementById(`progress-${playerName}`);
            if (progressElement) {
                console.log(progressElement)
                progressElement.textContent = `${progress.toFixed(2)}%`;
            }
        });

        connection.start().then(() => {
            connection.invoke("JoinLobby", '@lobbyId', '@currentPlayer')
                .catch(err => console.error(err.toString()));
        }).catch(err => console.error(err.toString()));

        connection.onclose(async (error) => {
            console.error("Connexion perdue. Tentative de reconnexion...");
            try {
                await connection.start();
                await connection.invoke("JoinLobby", '@lobbyId', '@currentPlayer');
            } catch (err) {
                console.error("Impossible de reconnecter :", err);
            }
        });


        connection.on("EndGame", (data) => {
        console.log("Fin de la partie. Données reçues :", data);

        localStorage.setItem("podium", JSON.stringify(data.podium));
        localStorage.setItem("winner", data.winner);
        window.location.href = "/SpeedTyping/GameOver?id=" + '@lobbyId';
    });


    </script>
    <script>
        function googleTranslateElementInit() {
            new google.translate.TranslateElement(
                { pageLanguage: 'fr' },
                'google_translate_element'
            );
        }
    </script>
    <script src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
</body>
</html>
