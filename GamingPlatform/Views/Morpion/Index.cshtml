@model GamingPlatform.Views.Morpion.MorpionModel

@{
    ViewData["Title"] = "Morpion";
}

@section Styles {
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Outfit', sans-serif;
            background: linear-gradient(135deg, #0f0f1a 0%, #1a1a2e 50%, #16213e 100%);
            min-height: 100vh;
            color: #e0e0e0;
            overflow-x: hidden;
        }

        /* Animated background particles */
        .bg-particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            overflow: hidden;
            z-index: 0;
        }

        .particle {
            position: absolute;
            width: 4px;
            height: 4px;
            background: rgba(255, 107, 107, 0.3);
            border-radius: 50%;
            animation: float 15s infinite ease-in-out;
        }

        .particle:nth-child(2) { left: 20%; animation-delay: -2s; background: rgba(78, 205, 196, 0.3); }
        .particle:nth-child(3) { left: 40%; animation-delay: -4s; }
        .particle:nth-child(4) { left: 60%; animation-delay: -6s; background: rgba(78, 205, 196, 0.3); }
        .particle:nth-child(5) { left: 80%; animation-delay: -8s; }

        @@keyframes float {
            0%, 100% { transform: translateY(100vh) scale(0); opacity: 0; }
            10% { opacity: 1; }
            90% { opacity: 1; }
            100% { transform: translateY(-10vh) scale(1); opacity: 0; }
        }

        .container {
            position: relative;
            z-index: 1;
            max-width: 800px;
            margin: 0 auto;
            padding: 40px 20px;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* Header */
        .header {
            text-align: center;
            margin-bottom: 40px;
            animation: fadeInDown 0.8s ease-out;
        }

        @@keyframes fadeInDown {
            from { opacity: 0; transform: translateY(-30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        h1 {
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, #ffd700, #4ecdc4);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            letter-spacing: -1px;
        }

        .subtitle {
            color: #6b7280;
            font-size: 0.95rem;
            font-weight: 300;
            margin-top: 8px;
        }

        /* Status Card */
        .status-card {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 16px;
            padding: 24px 32px;
            margin-bottom: 32px;
            backdrop-filter: blur(10px);
            width: 100%;
            max-width: 500px;
            animation: fadeIn 0.6s ease-out 0.2s both;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        #status {
            font-size: 1.1rem;
            font-weight: 500;
            text-align: center;
            color: #a0aec0;
            transition: all 0.3s ease;
        }

        /* Username Section */
        .username-section {
            width: 100%;
            max-width: 400px;
            animation: fadeIn 0.6s ease-out 0.4s both;
        }

        .input-wrapper {
            position: relative;
            margin-bottom: 20px;
        }

        .input-wrapper input {
            width: 100%;
            padding: 16px 20px 16px 50px;
            background: rgba(255, 255, 255, 0.05);
            border: 2px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            color: #fff;
            font-size: 1rem;
            font-family: 'Outfit', sans-serif;
            transition: all 0.3s ease;
            outline: none;
        }

        .input-wrapper input::placeholder {
            color: #6b7280;
        }

        .input-wrapper input:focus {
            border-color: #4ecdc4;
            box-shadow: 0 0 0 4px rgba(78, 205, 196, 0.15);
        }

        .input-wrapper .icon {
            position: absolute;
            left: 18px;
            top: 50%;
            transform: translateY(-50%);
            color: #6b7280;
            font-size: 1.1rem;
        }

        .btn-play {
            width: 100%;
            padding: 16px 32px;
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a5a 100%);
            border: none;
            border-radius: 12px;
            color: #fff;
            font-size: 1rem;
            font-weight: 600;
            font-family: 'Outfit', sans-serif;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            position: relative;
            overflow: hidden;
        }

        .btn-play::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s ease;
        }

        .btn-play:hover::before {
            left: 100%;
        }

        .btn-play:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 40px rgba(255, 107, 107, 0.3);
        }

        .btn-play:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        /* Game Container */
        #gameContainer {
            animation: fadeIn 0.6s ease-out;
        }

        .player-info {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 24px;
            margin-bottom: 32px;
            font-size: 1.1rem;
        }

        .player-tag {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 10px 20px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 50px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .player-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
        }

        .player-dot.x { background: #ffd700; box-shadow: 0 0 10px rgba(255, 215, 0, 0.5); }
        .player-dot.o { background: #4ecdc4; box-shadow: 0 0 10px rgba(78, 205, 196, 0.5); }

        .vs-text {
            color: #4a5568;
            font-weight: 600;
            font-size: 0.9rem;
        }

        /* Game Board */
        .game-board {
            display: grid;
            grid-template-columns: repeat(3, 80px);
            gap: 10px;
            background: linear-gradient(145deg, #1e3a5f 0%, #152238 100%);
            padding: 20px;
            border-radius: 20px;
            box-shadow: 
                0 25px 50px rgba(0, 0, 0, 0.4),
                inset 0 1px 0 rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.05);
            margin-bottom: 32px;
        }

        .cell {
            width: 80px;
            height: 80px;
            background: linear-gradient(145deg, #0d1b2a, #1b2838);
            border: 2px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            font-size: 2rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            box-shadow: 
                inset 0 4px 8px rgba(0, 0, 0, 0.4),
                0 2px 4px rgba(0, 0, 0, 0.2);
        }

        .cell:hover:not(.taken) {
            transform: scale(1.05);
            border-color: #4ecdc4;
            box-shadow: 
                inset 0 4px 8px rgba(0, 0, 0, 0.4),
                0 0 20px rgba(78, 205, 196, 0.3);
        }

        .cell.x {
            color: #ffd700;
            animation: placeMove 0.3s ease-out;
        }

        .cell.o {
            color: #4ecdc4;
            animation: placeMove 0.3s ease-out;
        }

        @@keyframes placeMove {
            from { transform: scale(0.3); opacity: 0; }
            to { transform: scale(1); opacity: 1; }
        }

        .cell.taken {
            cursor: not-allowed;
        }

        /* Buttons */
        .btn-new-game {
            margin-top: 24px;
            padding: 12px 28px;
            background: transparent;
            border: 2px solid rgba(78, 205, 196, 0.5);
            border-radius: 50px;
            color: #4ecdc4;
            font-size: 0.95rem;
            font-weight: 500;
            font-family: 'Outfit', sans-serif;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-new-game:hover {
            background: rgba(78, 205, 196, 0.1);
            border-color: #4ecdc4;
            transform: translateY(-2px);
        }

        /* Responsive */
        @@media (max-width: 600px) {
            h1 { font-size: 2rem; }
            
            .game-board {
                grid-template-columns: repeat(3, 60px);
                gap: 8px;
                padding: 12px;
            }
            
            .cell {
                width: 60px;
                height: 60px;
                font-size: 1.5rem;
            }
        }

        /* Utility */
        .hidden { display: none !important; }
    </style>
}

<!-- Background particles -->
<div class="bg-particles">
    <div class="particle" style="left: 10%;"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
</div>

<div class="container">
    <!-- Header -->
    <header class="header">
        <h1>Jeu de Morpion</h1>
        <p class="subtitle">Jouez au jeu classique des croix et des ronds !</p>
    </header>

    <!-- Status Card -->
    <div class="status-card">
        <p id="status">Veuillez entrer un nom d'utilisateur pour commencer.</p>
    </div>

    <!-- Username Section -->
    <div class="username-section" id="usernameSection">
        <div class="input-wrapper">
            <span class="icon">👤</span>
            <input type="text" id="username" placeholder="Nom d'utilisateur" autofocus />
        </div>
        <button id="startGame" class="btn-play">
            <span>🎮 Trouver un adversaire</span>
        </button>
    </div>

    <!-- Game Container -->
    <div id="gameContainer" class="hidden">
        <div class="player-info">
            <div class="player-tag">
                <span class="player-dot x"></span>
                <span id="player1Name">Joueur 1</span>
            </div>
            <span class="vs-text">VS</span>
            <div class="player-tag">
                <span class="player-dot o"></span>
                <span id="player2Name">Joueur 2</span>
            </div>
        </div>
        
        <div class="game-board" id="gameBoard"></div>
        
        <button id="newGameBtn" class="btn-new-game hidden">
            ↻ Nouvelle partie
        </button>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.4/signalr.min.js"></script>
    
    <script type="text/javascript">
        $(function () {
            let playerId;
            let currentGame = null;
            let mySymbol = null;

            const connection = new signalR.HubConnectionBuilder()
                .withUrl("/morpionHub")
                .configureLogging(signalR.LogLevel.Information)
                .build();

            connection.on("PlayerJoined", function (player) {
                playerId = player.id;
                setStatus("En attente d'un adversaire...", true);
            });

            connection.on("GameStart", function (gameData) {
                currentGame = gameData;
                mySymbol = gameData.player1.name === $('#username').val() ? 'X' : 'O';

                $('#usernameSection').addClass('hidden');
                $('#gameContainer').removeClass('hidden');

                $('#player1Name').text(gameData.player1.name);
                $('#player2Name').text(gameData.player2.name);

                buildBoard();
                updateStatus(gameData.currentPlayer);
            });

            connection.on("CellClicked", function (moveData) {
                updateCell(moveData.row, moveData.col, moveData.symbol);
            });

            connection.on("UpdateTurn", function (turnData) {
                updateStatus(turnData.currentPlayer);
            });

            connection.on("GameOver", function (result) {
                disableBoard();
                
                if (result.isDraw) {
                    setStatus("🤝 Match nul !");
                } else {
                    setStatus(`${result.winner === 'X' ? '✖️' : '⭕'} ${result.winner} a gagné !`);
                }

                $('#newGameBtn').removeClass('hidden');
            });

            connection.on("Error", function (message) {
                setStatus("❌ " + message);
            });

            $('#startGame').click(function () {
                const username = $('#username').val().trim();
                if (!username) {
                    $('#username').focus();
                    return;
                }

                $(this).prop('disabled', true);
                connection.invoke("JoinGame", username).catch(function (err) {
                    console.error("Error:", err);
                });
            });

            $('#username').keypress(function (e) {
                if (e.which === 13) {
                    $('#startGame').click();
                }
            });

            $('#newGameBtn').click(function () {
                resetGame();
            });

            function setStatus(text, loading) {
                const status = $('#status');
                status.text(text);
            }

            function buildBoard() {
                const board = $('#gameBoard');
                board.empty();

                for (let i = 0; i < 9; i++) {
                    const cell = $(`<div class="cell" data-index="${i}"></div>`);
                    cell.click(function () {
                        playMove(i);
                    });
                    board.append(cell);
                }
            }

            function updateCell(row, col, symbol) {
                const index = row * 3 + col;
                const cell = $(`.cell[data-index="${index}"]`);
                cell.addClass(symbol.toLowerCase()).text(symbol);
            }

            function playMove(index) {
                connection.invoke("PlayMove", index).catch(function (err) {
                    console.error("Error:", err);
                });
            }

            function updateStatus(currentPlayerName) {
                const isMyTurn = ($('#username').val() === currentPlayerName);
                if (isMyTurn) {
                    setStatus(`C'est votre tour !`);
                } else {
                    setStatus(`Tour de ${currentPlayerName}`);
                }
            }

            function disableBoard() {
                $('.cell').off('click');
            }

            function resetGame() {
                $('#gameContainer').addClass('hidden');
                $('#usernameSection').removeClass('hidden');
                $('#newGameBtn').addClass('hidden');
                $('#username').val('').focus();
                $('#gameBoard').empty();
                $('#startGame').prop('disabled', false);
                currentGame = null;
                mySymbol = null;
                setStatus("Veuillez entrer un nom d'utilisateur pour commencer.");
            }

            connection.start().catch(function (err) {
                setStatus("❌ Erreur de connexion");
            });
        });
    </script>
}
