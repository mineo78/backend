@model dynamic
@{
    ViewData["Title"] = "Morpion";
    var lobbyId = ViewBag.LobbyId;
    var playerName = ViewBag.PlayerName;
}

@section Styles {
    <!-- Font Awesome pour les icônes (si pas déjà dans _Layout) -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    
    <style>
        /* === STYLE MODERNE TYPE PUISSANCE 4 === */
        
        /* Background Particles */
        .bg-particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            overflow: hidden;
            z-index: -1;
        }

        .particle {
            position: absolute;
            width: 4px;
            height: 4px;
            background: rgba(255, 107, 107, 0.3);
            border-radius: 50%;
            animation: float 15s infinite ease-in-out;
        }

        .particle:nth-child(2) { left: 20%; animation-delay: -2s; background: rgba(78, 205, 196, 0.3); }
        .particle:nth-child(3) { left: 40%; animation-delay: -4s; }
        .particle:nth-child(4) { left: 60%; animation-delay: -6s; background: rgba(78, 205, 196, 0.3); }
        .particle:nth-child(5) { left: 80%; animation-delay: -8s; }

        @@keyframes float {
            0%, 100% { transform: translateY(100vh) scale(0); opacity: 0; }
            10% { opacity: 1; }
            90% { opacity: 1; }
            100% { transform: translateY(-10vh) scale(1); opacity: 0; }
        }

        /* Container principal */
        .game-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 40px 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* Titre & Header */
        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        h1 {
            font-size: 3rem;
            font-weight: 700;
            background: linear-gradient(135deg, #ff6b6b, #4ecdc4);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 0.5rem;
        }

        .player-info {
            color: #a0aec0;
            font-size: 1.1rem;
        }

        /* Carte de statut (Glassmorphism) */
        .status-card {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 16px;
            padding: 20px 30px;
            backdrop-filter: blur(10px);
            margin-bottom: 30px;
            width: 100%;
            text-align: center;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            color: #e0e0e0;
        }

        .status-card h3 {
            margin: 0;
            font-size: 1.2rem;
            font-weight: 500;
        }

        /* Plateau de jeu */
        #board {
            background: rgba(15, 15, 26, 0.6);
            padding: 20px;
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 25px 50px rgba(0,0,0,0.5);
        }

        table {
            border-collapse: separate;
            border-spacing: 10px;
            margin: 0 auto;
        }

        table td {
            width: 100px;
            height: 100px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            font-size: 3rem;
            font-weight: 700;
            color: white;
            text-align: center;
            vertical-align: middle;
            cursor: pointer;
            transition: all 0.2s ease;
            box-shadow: inset 0 2px 4px rgba(0,0,0,0.3);
            border: 1px solid rgba(255, 255, 255, 0.05);
        }

        table td:hover {
            transform: translateY(-2px);
            background: rgba(255, 255, 255, 0.1);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

        /* Couleurs X et O */
        /* Note: Handlebars injecte le texte brute, on peut styliser si besoin */
        
        .text-success { color: #4ecdc4 !important; }
        .text-warning { color: #ff6b6b !important; }
    </style>
}

<!-- Background Particles -->
<div class="bg-particles">
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
</div>

<div class="game-container">
    <div class="header">
        <h1>Morpion</h1>
        <p class="player-info">Joueur : <strong>@playerName</strong></p>
    </div>

    <div class="status-card">
        <h3><i class="fa-solid fa-gamepad"></i> Statut: <span id="status">Connexion...</span></h3>
    </div>

    <div id="board"></div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.4/signalr.min.js"></script>

    <!-- Handlebars Template (Adapté pour ne plus utiliser de bordures noires moches) -->
    <script id="board-template" type="text/x-handlebars-template">
        <table>
            <tbody>
                {{#each pieces}}
                <tr>
                    {{#each this}}
                    <td id="pos-{{@@../index}}-{{@@index}}" onclick="makeMove({{@@../index}}, {{@@index}})">{{this}}</td>
                    {{/each}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </script>

    <script>
        // === TON CODE ORIGINAL INCHANGÉ (Juste adapté les sélecteurs si besoin) ===
        
        const lobbyId = '@lobbyId';
        const username = '@playerName';
        
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/morpionHub")
            .withAutomaticReconnect()
            .build();

        const template = Handlebars.compile($("#board-template").html());

        connection.start().then(() => {
            console.log("Connected to MorpionHub");
            connection.invoke("JoinGame", lobbyId, username);
        }).catch(err => console.error(err));

        connection.on("waitingForOpponent", () => {
            $("#status").text("En attente de l'adversaire...");
        });

        connection.on("start", (game) => {
            console.log("Game started:", game);
            $("#status").text("La partie commence ! C'est au tour de " + game.whoseTurn.name);
            renderBoard(game.board);
        });

        connection.on("piecePlaced", (row, col, piece) => {
            // Petite touche esthétique : couleur selon la pièce
            const el = $(`#pos-${row}-${col}`);
            el.text(piece);
            if (piece === 'X') el.css('color', '#ff6b6b'); // Rouge
            if (piece === 'O') el.css('color', '#4ecdc4'); // Cyan
        });

        connection.on("updateTurn", (game) => {
            $("#status").text("C'est au tour de " + game.whoseTurn.name);
        });

        connection.on("winner", (winnerName) => {
            $("#status").html(`<span class="text-success">Le gagnant est ${winnerName} !</span>`);
            alert(winnerName + " a gagné !");
        });

        connection.on("tieGame", () => {
            $("#status").text("Match nul !");
            alert("Match nul !");
        });
        
        connection.on("notPlayersTurn", () => {
            alert("Ce n'est pas votre tour !");
        });
        
        connection.on("notValidMove", () => {
            alert("Mouvement invalide !");
        });

        function renderBoard(board) {
            $("#board").html(template(board));
            
            // Appliquer les couleurs après le rendu initial
            board.pieces.forEach((row, rIndex) => {
                row.forEach((piece, cIndex) => {
                    if (piece === 'X') $(`#pos-${rIndex}-${cIndex}`).css('color', '#ff6b6b');
                    if (piece === 'O') $(`#pos-${rIndex}-${cIndex}`).css('color', '#4ecdc4');
                });
            });
        }

        function makeMove(row, col) {
            connection.invoke("PlacePiece", row, col).catch(err => console.error(err));
        }
    </script>
}
