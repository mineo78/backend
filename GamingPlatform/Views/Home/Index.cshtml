@{
    ViewData["Title"] = "Accueil";
}

<!-- HERO SECTION -->
<div class="hero-section text-center">
    <div class="hero-content">
        <h1 class="display-3 fw-bold hero-title">Chemin de Travers</h1>
        <p class="lead text-light opacity-75 mb-4">Découvrez nos jeux interactifs et défiez vos amis en temps réel !</p>
        <a href="#games" class="btn btn-hero btn-lg px-5">
            Jouer maintenant <span class="ms-2">🎮</span>
        </a>
    </div>
</div>

<!-- GAMES GRID -->
<div id="games" class="container-fluid py-5">
    <h2 class="text-center mb-5 section-title">Nos Jeux Disponibles</h2>
    
    <div class="row g-4 justify-content-center">
        <!-- Carte Puissance 4 -->
        <div class="col-md-6 col-lg-4">
            <a asp-controller="Puissance4" asp-action="Game" class="game-card-link">
                <div class="game-card">
                    <div class="card-icon red-glow">🔴</div>
                    <h3 class="card-title">Puissance 4</h3>
                    <p class="card-desc">Soyez le premier à aligner quatre jetons pour remporter la victoire !</p>
                    <div class="card-action">Jouer <span class="arrow">→</span></div>
                </div>
            </a>
        </div>

        <!-- Carte Speed Typing -->
        <div class="col-md-6 col-lg-4">
            <a asp-controller="SpeedTyping" asp-action="Index" class="game-card-link">
                <div class="game-card">
                    <div class="card-icon cyan-glow">⚡</div>
                    <h3 class="card-title">Speed Typing</h3>
                    <p class="card-desc">Testez votre vitesse de frappe et votre précision face au chrono.</p>
                    <div class="card-action">Jouer <span class="arrow">→</span></div>
                </div>
            </a>
        </div>

        <!-- Carte Morpion -->
        <div class="col-md-6 col-lg-4">
            <a asp-controller="Morpion" asp-action="Index" class="game-card-link">
                <div class="game-card">
                    <div class="card-icon purple-glow">❌</div>
                    <h3 class="card-title">Morpion</h3>
                    <p class="card-desc">Le classique indémodable. Alignez trois symboles avant l'adversaire.</p>
                    <div class="card-action">Jouer <span class="arrow">→</span></div>
                </div>
            </a>
        </div>
    </div>
</div>

<!-- STYLES SPECIFIQUES A L'ACCUEIL -->
<style>
    /* HERO */
    .hero-section {
        position: relative;
        padding: 100px 20px;
        margin-bottom: 40px;
        background: radial-gradient(circle at center, rgba(78, 205, 196, 0.15) 0%, transparent 70%);
        border-radius: 24px;
        overflow: hidden;
    }

    .hero-title {
        background: linear-gradient(135deg, #fff 0%, #a5b4fc 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 20px;
        letter-spacing: -1px;
    }

    .btn-hero {
        background: linear-gradient(135deg, var(--accent-red), #ff8787);
        border: none;
        border-radius: 50px;
        color: white;
        font-weight: 600;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        padding: 15px 40px;
    }

    .btn-hero:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(255, 107, 107, 0.4);
        color: white;
    }

    /* SECTION TITLE */
    .section-title {
        color: var(--text-main);
        font-weight: 700;
        position: relative;
        display: inline-block;
        left: 50%;
        transform: translateX(-50%);
    }

    .section-title::after {
        content: '';
        display: block;
        width: 60px;
        height: 3px;
        background: var(--accent-cyan);
        margin: 10px auto 0;
        border-radius: 2px;
    }

    /* GAME CARDS */
    .game-card-link {
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .game-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 20px;
        padding: 40px 30px;
        height: 100%;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        position: relative;
        overflow: hidden;
        backdrop-filter: blur(10px);
    }

    .game-card:hover {
        transform: translateY(-10px);
        background: rgba(255, 255, 255, 0.06);
        border-color: rgba(255, 255, 255, 0.2);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
    }

    .card-icon {
        font-size: 3rem;
        margin-bottom: 20px;
        display: inline-block;
        padding: 15px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 50%;
        width: 80px;
        height: 80px;
        line-height: 50px;
        text-align: center;
        transition: transform 0.4s ease;
    }

    .game-card:hover .card-icon {
        transform: scale(1.1) rotate(10deg);
    }

    .red-glow { box-shadow: 0 0 20px rgba(255, 107, 107, 0.2); }
    .cyan-glow { box-shadow: 0 0 20px rgba(78, 205, 196, 0.2); }
    .purple-glow { box-shadow: 0 0 20px rgba(168, 85, 247, 0.2); }

    .card-title {
        color: #fff;
        font-weight: 700;
        margin-bottom: 12px;
        font-size: 1.5rem;
    }

    .card-desc {
        color: var(--text-muted);
        font-size: 0.95rem;
        line-height: 1.6;
        margin-bottom: 24px;
    }

    .card-action {
        color: var(--accent-cyan);
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: gap 0.3s ease;
    }

    .game-card:hover .card-action {
        gap: 15px;
        color: #fff;
    }

    .arrow {
        transition: transform 0.3s ease;
    }

    .game-card:hover .arrow {
        transform: translateX(5px);
    }
</style>
