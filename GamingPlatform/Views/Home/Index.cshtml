@{
    ViewData["Title"] = "Chemin de Travers";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Page d'accueil</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #2c3e50; /* Couleur sombre */
            color: #ecf0f1; /* Texte clair */
        }
        .hero {
            padding: 100px 0;
            background: linear-gradient(rgba(44, 62, 80, 0.8), rgba(44, 62, 80, 0.8)), url('/chemin.webp') center/cover;
            color: #fff;
        }
        .hero h1 {
            font-weight: bold;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
        }
        .btn-primary {
            background-color: #e74c3c;
            border-color: #e74c3c;
        }
        .btn-primary:hover {
            background-color: #c0392b;
            border-color: #c0392b;
        }
        .game-card {
            background-color: #34495e;
            border: none;
        }
        .game-card img {
            border-radius: 0.5rem 0.5rem 0 0;
        }
        .card-text {
            color: white;
        }
        .game-card h5 {
            color: #e74c3c;
        }
        .game-card .btn {
            background-color: #e74c3c;
            border-color: #e74c3c;
        }
        .game-card .btn:hover {
            background-color: #c0392b;
            border-color: #c0392b;
        }
        footer {
            background-color: #34495e;
            color: #ecf0f1;
        }
    </style>
</head>
<body>
    <!-- Hero Section -->
    <div class="hero text-center">
        <h1 class="display-4">Chemin de Travers</h1>

        <p class="lead">Découvrez nos jeux interactifs et amusez-vous avec vos amis !</p>
        <a href="#games" class="btn btn-primary btn-lg mt-3">
            <i class="fa-solid fa-play"></i> Voir les jeux
        </a>
    </div>

    <!-- Games Section -->
    <div id="games" class="container py-5">
        <h2 class="text-center mb-5">Nos Jeux</h2>
        <div class="row">
            <!-- Speed Typing Game -->
            <div class="col-md-4 mb-4">
                <div class="card game-card shadow h-100 d-flex flex-column">
                    <img src="~/speedtyping.webp" alt="Speed Typing" class="card-img-top">
                    <div class="card-body text-center">
                        <h5 class="card-title">Speed Typing</h5>
                        <p class="card-text">Testez votre rapidité et précision en tapant des phrases avant vos adversaires !</p>
                        <a href="/SpeedTyping/" class="btn btn-primary">Jouer</a>
                    </div>
                </div>
            </div>
            <!-- Morpion Game -->
            <div class="col-md-4 mb-4">
                <div class="card game-card shadow h-100 d-flex flex-column">
                    <img src="~/morpion.webp" alt="Morpion" class="card-img-top">
                    <div class="card-body text-center">
                        <h5 class="card-title">Morpion</h5>
                        <p class="card-text">Alignez trois symboles pour gagner ce jeu classique et intemporel.</p>
                        <a href="/Morpion/" class="btn btn-primary">Jouer</a>
                    </div>
                </div>
            </div>

            <!-- Puissance 4 Game -->
            <div class="col-md-4 mb-4">
                <div class="card game-card shadow h-100 d-flex flex-column">
                    <img src="~/puissance4.webp" alt="Puissance 4" class="card-img-top">
                    <div class="card-body text-center">
                        <h5 class="card-title">Puissance 4</h5>
                        <p class="card-text">Soyez le premier à aligner quatre jetons et remportez la victoire !</p>
                                <a href="/Puissance4/Index" class="btn btn-primary">Jouer</a>

                    </div>
                </div>
            </div>
        </div>
    </div>

@*     <!-- Footer -->
    <footer class="text-center py-4">
        <p>&copy; 2024 Chemin de Travers. Tous droits réservés.</p>
    </footer>
 *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
